@model City

<h2>Delete City</h2>

<h3>Are you sure you want to delete this city?</h3>
<div>
    <h4>City Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.CityName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityName)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.CityId" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Back to List</a>
        </div>
    </form>
</div>