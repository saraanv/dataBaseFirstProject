@model Brand

<h2>Delete Brand</h2>

<h3>Are you sure you want to delete this brand?</h3>
<div>
    <h4>Brand Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
    </dl>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BrandDesc)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BrandDesc)
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" asp-route-id="@Model.BrandId" method="post">
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-default">Back to List</a>
        </div>
    </form>
</div>